@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<SatisHareket>

@{
    ViewBag.Title = "Müşteri Satışları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Cari Satış İşlemleri</h3>
                <p class="text-subtitle text-muted">Bu sayfada cari müşterisinin gerçekleştirdiği satışları görüntüleyebilirsiniz.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Istatistik/Index/">Personel Paneli</a></li>
                        <li class="breadcrumb-item"><a href="/Cari/Index/">Cari İşlemleri</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Müşteri Satışları</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section>
        <div class="card">
            <div class="card-header" style="padding-bottom:0">
                <h4 class="card-title">Cari Adı: @ViewBag.Cari</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <table class="table table-lg">
                        <thead>
                            <tr>
                                <th>Satış ID</th>
                                <th>Ürün</th>
                                <th>Personel</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SatisHareketId</td>
                                    <td>@item.Urun.UrunAd</td>
                                    <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
                                    <td>@item.Fiyat₺</td>
                                    <td>@item.Adet</td>
                                    <td>@item.ToplamTutar₺</td>
                                    <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a href="#" class="btn btn-success" title="Yazdır">
                                            <i class="bi bi-printer"></i> Yazdır
                                        </a>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">Bu cari için gerçekleştirilen satış bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
