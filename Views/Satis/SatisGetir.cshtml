@model MvcOnlineTicariOtomasyon.Models.Entities.SatisHareket

@{
    ViewBag.Title = "SatisGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="~/mazer-1.0.0/dist/assets/vendors/simple-datatables/style.css">

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Satış Güncelleme</h3>
                <p class="text-subtitle text-muted">Bu sayfadan mevcut bir satışın bilgilerini güncelleyebilirsiniz.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Istatistik/Index/">Personel Paneli</a></li>
                        <li class="breadcrumb-item"><a href="/Satis/Index/">Satış İşlemleri</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Satış Güncelle</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section>
        <div class="card">
            <div class="card-header" style="padding-bottom:0">
                <h4 class="card-title">Satış Bilgilerini Güncelle</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form method="post" class="form">
                        <input type="hidden" name="SatisHareketId" value="@Model.SatisHareketId" />

                        <div class="row">
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="UrunId">Ürün</label>
                                    <div class="position-relative">
                                        <select id="UrunId" name="UrunId" class="form-control">
                                            @foreach (var item in (List<SelectListItem>)ViewBag.UrunList)
                                            {
                                                <option value="@item.Value" @(item.Value == Model.UrunId.ToString() ? "selected" : "")>
                                                    @item.Text
                                                </option>
                                            }
                                        </select>
                                        <div class="form-control-icon">
                                            <i class="bi bi-box"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="CariId">Cari</label>
                                    <div class="position-relative">
                                        <select id="CariId" name="CariId" class="form-control">
                                            @foreach (var item in (List<SelectListItem>)ViewBag.CariList)
                                            {
                                                <option value="@item.Value" @(item.Value == Model.CariId.ToString() ? "selected" : "")>
                                                    @item.Text
                                                </option>
                                            }
                                        </select>
                                        <div class="form-control-icon">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="PersonelId">Personel</label>
                                    <div class="position-relative">
                                        <select id="PersonelId" name="PersonelId" class="form-control">
                                            @foreach (var item in (List<SelectListItem>)ViewBag.PersonelList)
                                            {
                                                <option value="@item.Value" @(item.Value == Model.PersonelId.ToString() ? "selected" : "")>
                                                    @item.Text
                                                </option>
                                            }
                                        </select>
                                        <div class="form-control-icon">
                                            <i class="bi bi-person-badge"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="Adet">Adet</label>
                                    <div class="position-relative">
                                        <input type="number" id="Adet" name="Adet" value="@Model.Adet" class="form-control" placeholder="Ürün adedini girin" min="0" />
                                        <div class="form-control-icon">
                                            <i class="bi bi-sort-numeric-up"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="Fiyat">Fiyat</label>
                                    <div class="position-relative">
                                        <input type="text" id="Fiyat" name="Fiyat" value="@Model.Fiyat" class="form-control" placeholder="Fiyat girin" />
                                        <div class="form-control-icon">
                                            <i class="bi bi-cash"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="ToplamTutar">Toplam Tutar</label>
                                    <div class="position-relative">
                                        <input type="text" id="ToplamTutar" name="ToplamTutar" value="@Model.ToplamTutar" class="form-control" placeholder="Toplam tutarı göster" readonly />
                                        <div class="form-control-icon">
                                            <i class="bi bi-calculator"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="Tarih">Tarih</label>
                                    <div class="position-relative">
                                        <input type="text" id="Tarih" name="Tarih" value="@Model.Tarih.ToString("dd.MM.yyyy")" class="form-control" readonly />
                                        <div class="form-control-icon">
                                            <i class="bi bi-calendar"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary me-1 mb-1">
                                    Güncelle
                                </button>
                                <button type="reset" class="btn btn-light-secondary me-1 mb-1">
                                    Vazgeç
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

<script src="~/mazer-1.0.0/dist/assets/vendors/simple-datatables/simple-datatables.js"></script>
