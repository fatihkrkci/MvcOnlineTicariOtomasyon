@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<SatisHareket>

@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Departman İşlemleri</h3>
                <p class="text-subtitle text-muted">
                    Bu sayfada personelin gerçekleştirdiği satışları görüntüleyebilirsiniz.
                </p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Dashboard/Index/">Personel Paneli</a></li>
                        <li class="breadcrumb-item"><a href="/Departman/Index/">Departman İşlemleri</a></li>
                        <li class="breadcrumb-item"><a href="#">Detaylar</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Satışlar</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section>
        <div class="card">
            <div class="card-header" style="padding-bottom:0">
                <h4 class="card-title">Personel Adı: @ViewBag.Personel</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Ürün</th>
                                <th>Cari</th>
                                <th>Fiyat</th>
                                <th>Adet</th>
                                <th>Toplam</th>
                                <th>Tarih</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Urun.UrunAd</td>
                                    <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                                    <td>@item.Fiyat₺</td>
                                    <td>@item.Adet</td>
                                    <td>@item.ToplamTutar</td>
                                    <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <a href="#" class="btn btn-success" title="Yazdır">
                                            <i class="bi bi-printer"></i> Yazdır
                                        </a>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted">Bu personelin gerçekleştirdiği satış bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
