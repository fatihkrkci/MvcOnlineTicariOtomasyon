@model MvcOnlineTicariOtomasyon.Models.Entities.Kategori

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>

<br />
<h2>Yeni Kategori Sayfası</h2>
<br />
<form method="post" class="form-group">
    @Html.LabelFor(x => x.KategoriAd)
    @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" id="btn1">Kaydet</button>
</form>


<script>
    $('#btn1').click(function () {
        alert("Kategori başarılı bir şekilde eklendi.")
    });
</script>