@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<Urun>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    <a href="/Urun/UrunEkle" class="btn btn-primary">Yeni Ürün Ekle</a>
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Kategori</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunId</td>
                <td>@item.UrunAd</td>
                <td>@item.Marka</td>
                <td>@item.Stok</td>
                <td>@item.AlisFiyat</td>
                <td>@item.SatisFiyat</td>
                <td>@item.Kategori.KategoriAd</td>
                <td>@item.UrunGorsel</td>
                <td>
                    <a href="/Urun/UrunGetir/@item.UrunId" class="btn btn-warning">Güncelle</a>
                    <a href="/Urun/UrunSil/@item.UrunId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </table>
</div>