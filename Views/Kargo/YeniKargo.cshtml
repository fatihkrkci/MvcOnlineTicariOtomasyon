@model MvcOnlineTicariOtomasyon.Models.Entities.KargoDetay

@{
    ViewBag.Title = "Yeni Kargo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Kargo İşlemleri</h3>
                <p class="text-subtitle text-muted">Bu sayfadan yeni kargo bilgilerini ekleyebilirsiniz.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Istatistik/Index/">Personel Paneli</a></li>
                        <li class="breadcrumb-item"><a href="/Kargo/Index/">Kargo İşlemleri</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Yeni Kargo Ekle</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <section>
        <div class="card">
            <div class="card-header" style="padding-bottom:0">
                <h4 class="card-title">Yeni Kargo Bilgisi Ekle</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form method="post" class="form">
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="TakipKodu">Takip Kodu</label>
                                    <div class="position-relative">
                                        <input type="text" id="TakipKodu" class="form-control" name="TakipKodu" value="@ViewBag.TakipKodu" readonly />
                                        <div class="form-control-icon">
                                            <i class="bi bi-upc"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="Personel">Personel</label>
                                    <div class="position-relative">
                                        @Html.TextBoxFor(x => x.Personel, new { @class = "form-control", placeholder = "Personelin adını yazın" })
                                        <div class="form-control-icon">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="Alici">Alıcı</label>
                                    <div class="position-relative">
                                        @Html.TextBoxFor(x => x.Alici, new { @class = "form-control", placeholder = "Alıcının adını yazın" })
                                        <div class="form-control-icon">
                                            <i class="bi bi-person-check"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <div class="form-group has-icon-left">
                                    <label for="Tarih">Tarih</label>
                                    <div class="position-relative">
                                        <input type="date" class="form-control" name="Tarih" />
                                        <div class="form-control-icon">
                                            <i class="bi bi-calendar-date"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group has-icon-left">
                                    <label for="Aciklama">Açıklama</label>
                                    <div class="position-relative">
                                        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", placeholder = "Açıklama girin" })
                                        <div class="form-control-icon">
                                            <i class="bi bi-file-earmark-text"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 d-flex justify-content-end">
                                <button type="submit" class="btn btn-primary me-1 mb-1">Kaydet</button>
                                <button type="reset" class="btn btn-light-secondary me-1 mb-1">Vazgeç</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
