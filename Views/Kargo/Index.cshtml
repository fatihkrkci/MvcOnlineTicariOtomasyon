@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<KargoDetay>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    <a href="/Kargo/YeniKargo" class="btn btn-primary">Yeni Kargo Girişi</a>
    <br />
    <br />
    @using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
    {
        <p>
            Kargo Takip Kodu: @Html.TextBox("p")
            <input type="submit" value="Ara" />
        </p>
    }
    <br />
    <table class="table table-bordered">
        <tr>
            <th>Personel</th>
            <th>Alıcı</th>
            <th>Tarih</th>
            <th>Kargo Takip Kodu</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Personel</td>
                <td>@item.Alici</td>
                <td>@item.Tarih</td>
                <td>@item.TakipKodu</td>
                <td>
                    <a href="/Kargo/KargoTakip/@item.TakipKodu" class="btn btn-success">Detaylar</a>
                </td>
            </tr>
        }
    </table>
</div>