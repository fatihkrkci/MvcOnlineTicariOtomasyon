@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<Mesaj>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h3 class="text-themecolor">Profilim</h3>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)">CARİ PANEL</a></li>
            <li class="breadcrumb-item active">PROFİLİM</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-xlg-3 col-md-5">
        <div class="card">
            <div class="card-body">
                <center class="my-3">
                    <img src="https://fijicanadabusiness.ca/wp-content/uploads/2018/12/no-picture-31.jpg" class="img-circle"
                         width="150" />
                    <h4 class="card-title mt-2">@ViewBag.AdSoyad</h4>
                    <h6 class="card-subtitle"><strong>@ViewBag.Email</strong></h6>
                    <div class="row text-center justify-content-md-center">
                        <div class="col-12">
                            <a href="javascript:void(0)" class="link">
                                <i class="fa fa-files-o"></i>
                                <font class="font-medium">Toplam Satış: @ViewBag.ToplamSatis</font>
                            </a>
                        </div>
                        <div class="col-12">
                            <a href="javascript:void(0)" class="link">
                                <i class="fa fa-archive"></i>
                                <font class="font-medium">Toplam Ürün: @ViewBag.ToplamUrun</font>
                            </a>
                        </div>
                        <div class="col-12">
                            <a href="javascript:void(0)" class="link">
                                <i class="fa fa-money"></i>
                                <font class="font-medium">Toplam Tutar: @ViewBag.ToplamTutar.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</font>
                            </a>
                        </div>
                    </div>
                </center>
            </div>
        </div>
    </div>
    @Html.Action("Partial1", "CariPanel")
    @Html.Action("Partial2", "CariPanel")
</div>

