@using MvcOnlineTicariOtomasyon.Models.Entities
@model List<Mesaj>

<div class="col-lg-12 col-md-12">
    <div class="card card-body mailbox" style="margin-bottom:0px">
        <h5 class="card-title">Duyurular</h5>
        <div class="message-center" style="height:auto">
            @foreach (var item in Model)
            {
                <a href="#">
                    <div class="btn btn-info btn-circle"><i class="fa fa-bullhorn" style="color:white"></i></div>
                    <div class="mail-contnet" style="width:95%">
                        <h6 class="text-dark font-medium mb-0" style="font-size: 15px">@item.Konu</h6> <span class="mail-desc" style="white-space: normal; font-size:14px"><strong>@item.Icerik</strong></span>
                        <span class="time"><strong>@item.Tarih.ToString("dd.MM.yyyy HH:mm")</strong></span>
                    </div>
                </a>
            }
        </div>
    </div>
</div>